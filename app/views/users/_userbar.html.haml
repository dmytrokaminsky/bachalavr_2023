.userbar
  - if current_user
    = link_to current_user.login, current_user
    %span.ml-2= link_to t('actions.logout'), destroy_user_session_path, method: :delete
  - else
    = link_to t('actions.sign_in'), new_user_session_path
    \ /
    = link_to t('actions.sign_up'), new_user_registration_path
  = switch_user_select